<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="#FFFFFF"
    android:paddingTop="2dip"
    android:paddingBottom="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:mode="twoLine">
    
     <LinearLayout
            android:id="@+id/detail_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="2sp" >
            
            <LinearLayout
                android:id="@+id/avatar_title_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                 <RelativeLayout
                    android:id="@+id/avatar_and_hits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/dispensary_avatar_list"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                         />
            
                     <!--  com.loopj.android.image.SmartImageView
                        android:id="@+id/dispensary_avatar_list"
                        android:layout_width="88px"
                        android:layout_height="88px"
                        android:contentDescription="Profile image"
                        android:src="@android:drawable/alert_dark_frame" />
                        -->
                
                    <ImageView
                        android:id="@+id/dispensary_featured_list"
                        android:layout_width="88px"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/dispensary_avatar_list"
                     />
                </RelativeLayout>
                   <LinearLayout
                    android:id="@+id/title_rating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/avatar_and_hits"
                    android:layout_marginLeft="5sp" >
                    <TextView
                        android:id="@+id/dispensary_title_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <LinearLayout
                           android:id="@+id/rating_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                           <ImageView
                            android:id="@+id/iv_rating_list"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="18sp"
                            android:layout_marginRight="5sp"/>

                           <TextView
                               android:id="@+id/dispensary_reviews_list"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="reviews"
                               android:textColor="#000000" />

                        <TextView
                            android:id="@+id/dispensary_distance_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="distance"
                            android:gravity="right"
                            android:textColor="#000000" 
                            android:layout_marginRight="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hours_and_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:orientation="vertical"
                        >
                        
                        <TextView
                            android:id="@+id/tv_dispensary_address_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:scrollHorizontally="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout 
                        android:id="@+id/call_and_directions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2sp">
                        
                        <Button
                            android:id="@+id/dispensary_phone_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call"
                            android:layout_marginRight="15sp"/>
                    </LinearLayout>

                </LinearLayout>
               </RelativeLayout>
            </LinearLayout>
    </LinearLayout>      
</TwoLineListItem>
